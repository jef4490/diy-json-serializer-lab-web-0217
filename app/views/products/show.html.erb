<h3><%= @product.name %></h3>
<div id="product-<%= @product.id %>">
  <p>Description: <%= @product.description %></p>
  <p>Inventory: <%= @product.inventory %></p>
  <p>Price: <%= @product.price %></p>
</div>
<a href="#" class="js-next" data-id="<%= @product.id + 1 %>">Next Product</a>

<div id="next-product">
</div>

<script type="text/javascript" charset="utf-8">
  $(function () {
    $(".js-next").on('click', function() {
      let id = $(this).data("id");
      $.get("/products/" + id + "/data", (data) => {
        let info = [data.name, data.description]
        $("#next-product").text(info);
      })
    })
  })
</script>
